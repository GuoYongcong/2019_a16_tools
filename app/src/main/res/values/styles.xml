<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 应用启动页的theme -->
    <style name="AppTheme.StartingWindowTheme" parent="AppTheme">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@drawable/start_page</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 设置Toolbar标题字体的大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">19sp</item><!--toolbar标题字体大小-->
    </style>

    <!-- 设置Toolbar 子标题subtitle标题字体的大小 -->
    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item><!--子标题字体大小-->
    </style>

    <style name="TextViewSortName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:layout_marginBottom">-10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">15sp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5sp</item>
        <item name="android:background">@color/textViewBackgroundNormal</item>
    </style>

    <style name="ViewLine.Small" parent="ViewLine">
        <item name="android:layout_height">2sp</item>
    </style>

    <style name="FlowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15sp</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="buttonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#021313</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="editviewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>



    <style name="TextDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Userpage_Button">
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/userpage_buttonshape</item>
    </style>

    <style name="launch_button">
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>
    <style name="ButtonRound" parent="editview">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_round</item>
    </style>
    <style name="ButtonRoundBorder" parent="editview">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_round_border</item>
    </style>
    <style name="editview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>
</resources>
