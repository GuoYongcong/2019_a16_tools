<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RubbishClassificationActivity"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_rubbish_classify"
            app:title="@string/title_rubbish_classify"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/layout_rubbish_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45sp"
            android:id="@+id/et_rubbish_query"
            android:hint="@string/rubbish_query_hint"
            android:imeOptions="actionSearch"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/img_rubbish_search"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:src="@drawable/ic_search"
            android:background="@null"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_rubbish_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_rubbish_name"
                style="@style/textStyle"
                android:layout_marginTop="0sp"
                android:layout_marginStart="15sp"
                android:text="@string/rubbish_name"/>
            <TextView
                android:id="@+id/tv_rubbish_classify"
                style="@style/TextDetail"
                android:layout_marginBottom="0sp"
                android:text="@string/rubbish_classify_name"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_rubbish_classify"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginEnd="15sp"
            android:src="@drawable/ic_ganlaji"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>