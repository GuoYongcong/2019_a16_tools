<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_above="@+id/bottom_nav_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- 大坑：为了配合CoordinatorLayout，触发向上滑动隐藏toolbar，使用NestedScrollView，RecylerView
         才兼容! SrollView和ListView之类不行 -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            xmlns:zhy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewSortName"
                android:text="@string/sort_name_1"
                />
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1"
                >
            </com.zhy.view.flowlayout.TagFlowLayout>
            <TextView
                style="@style/TextViewSortName"
                android:text="@string/sort_name_2"
                />
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1"
                >
            </com.zhy.view.flowlayout.TagFlowLayout>
            <TextView
                style="@style/TextViewSortName"
                android:text="@string/sort_name_3"
                />
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1"
                >
            </com.zhy.view.flowlayout.TagFlowLayout>
            <TextView
                style="@style/TextViewSortName"
                android:text="@string/sort_name_4"
                />
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1"
                >
            </com.zhy.view.flowlayout.TagFlowLayout>
            <TextView
                style="@style/TextViewSortName"
                android:text="@string/sort_name_5"
                />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1">

            </com.zhy.view.flowlayout.TagFlowLayout>
            <TextView
                style="@style/TextViewSortName"
                android:text="@string/sort_name_6"
                />
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="-1"
                >
            </com.zhy.view.flowlayout.TagFlowLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>